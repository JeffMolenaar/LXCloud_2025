# LXCloud Development Environment Configuration
# This file is for VS Code development setup
# Copy .env.example to .env for actual configuration

# Flask Development Settings
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# Database Configuration (Development)
# Use SQLite for quick development setup
SQLITE_FALLBACK_URI=sqlite:///lxcloud_development.db

# Or use MariaDB if available
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=lxcloud
# DB_PASSWORD=lxcloud
# DB_NAME=lxcloud_dev

# MQTT Configuration (Development)
MQTT_ENABLED=false
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=lxcloud_dev

# Controller Status Management
CONTROLLER_OFFLINE_TIMEOUT=300
CONTROLLER_STATUS_CHECK_INTERVAL=60

# Security (Development)
SECRET_KEY=development-secret-key-not-for-production

# Python Path Configuration
PYTHONPATH=./app:./config

# Logging
LOG_LEVEL=DEBUG