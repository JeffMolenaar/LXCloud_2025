{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask App - Development",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "true",
                "FLASK_HOST": "127.0.0.1",
                "FLASK_PORT": "5000"
            },
            "args": [],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Flask App - Test Mode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test_app.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "true"
            },
            "args": [],
            "jinja": true,
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true
        },
        {
            "name": "Python: Database Utils",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/database_utils.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        },
        {
            "name": "Debug Controller Status Service",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/debug_controller_status.py",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false
        }
    ]
}