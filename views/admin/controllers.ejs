<%- include('../partials/header', { user: user, title: title }) %>

<div class="container-fluid">
    <div class="row">
        <%- include('../partials/sidebar', { user: user }) %>
        
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="fas fa-microchip me-2"></i>
                    System Controllers
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a href="/admin" class="btn btn-sm btn-outline-secondary">
                            <i class="fas fa-arrow-left me-1"></i>
                            Back to Admin
                        </a>
                        <button class="btn btn-sm btn-success" onclick="refreshControllers()">
                            <i class="fas fa-sync me-1"></i>
                            Refresh
                        </button>
                    </div>
                </div>
            </div>

            <!-- Controllers Table -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-list me-2"></i>
                        All System Controllers
                    </h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Serial Number</th>
                                    <th>Type</th>
                                    <th>Name</th>
                                    <th>Status</th>
                                    <th>Bound To</th>
                                    <th>Location</th>
                                    <th>Last Seen</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (typeof controllers !== 'undefined' && controllers.length > 0) { %>
                                    <% controllers.forEach(function(controller) { %>
                                    <tr>
                                        <td>
                                            <code><%= controller.serialNumber %></code>
                                        </td>
                                        <td>
                                            <% 
                                            let typeIcon = 'fa-microchip';
                                            let typeColor = 'primary';
                                            switch(controller.type) {
                                                case 'speedradar':
                                                    typeIcon = 'fa-tachometer-alt';
                                                    typeColor = 'danger';
                                                    break;
                                                case 'beaufortmeter':
                                                    typeIcon = 'fa-wind';
                                                    typeColor = 'info';
                                                    break;
                                                case 'weatherstation':
                                                    typeIcon = 'fa-cloud-sun';
                                                    typeColor = 'warning';
                                                    break;
                                                case 'aicamera':
                                                    typeIcon = 'fa-camera';
                                                    typeColor = 'success';
                                                    break;
                                            }
                                            %>
                                            <span class="badge bg-<%= typeColor %>">
                                                <i class="fas <%= typeIcon %> me-1"></i>
                                                <%= controller.type.charAt(0).toUpperCase() + controller.type.slice(1) %>
                                            </span>
                                        </td>
                                        <td>
                                            <% if (controller.name) { %>
                                                <strong><%= controller.name %></strong>
                                            <% } else { %>
                                                <em class="text-muted">No name set</em>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (controller.status === 'online') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-circle me-1"></i>
                                                    Online
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-circle me-1"></i>
                                                    Offline
                                                </span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (controller.userId) { %>
                                                <span class="badge bg-info">Bound</span>
                                            <% } else { %>
                                                <span class="badge bg-warning">Unbound</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (controller.latitude && controller.longitude) { %>
                                                <small class="text-muted">
                                                    <%= parseFloat(controller.latitude).toFixed(4) %>,
                                                    <%= parseFloat(controller.longitude).toFixed(4) %>
                                                </small>
                                            <% } else { %>
                                                <em class="text-muted">No location</em>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% if (controller.lastSeen) { %>
                                                <small class="text-muted">
                                                    <%= new Date(controller.lastSeen).toLocaleString() %>
                                                </small>
                                            <% } else { %>
                                                <small class="text-muted">Never</small>
                                            <% } %>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button class="btn btn-sm btn-outline-info" 
                                                        onclick="viewControllerDetails('<%= controller.serialNumber %>')"
                                                        title="View Details">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <% if (controller.userId) { %>
                                                    <button class="btn btn-sm btn-warning" 
                                                            onclick="unbindController(<%= controller.id %>, '<%= controller.serialNumber %>')"
                                                            title="Force Unbind">
                                                        <i class="fas fa-unlink"></i>
                                                    </button>
                                                <% } %>
                                                <button class="btn btn-sm btn-danger" 
                                                        onclick="deleteController(<%= controller.id %>, '<%= controller.serialNumber %>')"
                                                        title="Delete Controller">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="8" class="text-center py-4">
                                            <i class="fas fa-microchip fa-2x text-muted mb-2"></i>
                                            <p class="text-muted">No controllers found in the system</p>
                                            <small class="text-muted">Controllers will appear here when they register via MQTT</small>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Controller Statistics -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="fas fa-chart-bar me-2"></i>
                                Controller Statistics
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3 text-center">
                                    <h4 class="text-primary"><%= controllers ? controllers.length : 0 %></h4>
                                    <p class="text-muted">Total Controllers</p>
                                </div>
                                <div class="col-md-3 text-center">
                                    <h4 class="text-success">
                                        <%= controllers ? controllers.filter(c => c.status === 'online').length : 0 %>
                                    </h4>
                                    <p class="text-muted">Online</p>
                                </div>
                                <div class="col-md-3 text-center">
                                    <h4 class="text-info">
                                        <%= controllers ? controllers.filter(c => c.userId).length : 0 %>
                                    </h4>
                                    <p class="text-muted">Bound</p>
                                </div>
                                <div class="col-md-3 text-center">
                                    <h4 class="text-warning">
                                        <%= controllers ? controllers.filter(c => c.latitude && c.longitude).length : 0 %>
                                    </h4>
                                    <p class="text-muted">With Location</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- Controller Details Modal -->
<div class="modal fade" id="controllerDetailsModal" tabindex="-1" aria-labelledby="controllerDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="controllerDetailsModalLabel">
                    <i class="fas fa-microchip me-2"></i>
                    Controller Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="controllerDetailsContent">
                <!-- Content will be loaded dynamically -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
function refreshControllers() {
    location.reload();
}

function viewControllerDetails(serialNumber) {
    // In a real implementation, this would fetch controller details via AJAX
    document.getElementById('controllerDetailsContent').innerHTML = `
        <div class="text-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2">Loading controller details for ${serialNumber}...</p>
        </div>
    `;
    
    const modal = new bootstrap.Modal(document.getElementById('controllerDetailsModal'));
    modal.show();
    
    // Simulate loading delay
    setTimeout(() => {
        document.getElementById('controllerDetailsContent').innerHTML = `
            <div class="row">
                <div class="col-md-6">
                    <h6>Basic Information</h6>
                    <table class="table table-sm">
                        <tr><td><strong>Serial Number:</strong></td><td>${serialNumber}</td></tr>
                        <tr><td><strong>Type:</strong></td><td>Weather Station</td></tr>
                        <tr><td><strong>Status:</strong></td><td><span class="badge bg-success">Online</span></td></tr>
                        <tr><td><strong>Last Seen:</strong></td><td>Just now</td></tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h6>Configuration</h6>
                    <table class="table table-sm">
                        <tr><td><strong>Location:</strong></td><td>52.5200, 13.4050</td></tr>
                        <tr><td><strong>Bound To:</strong></td><td>admin@lxcloud.local</td></tr>
                        <tr><td><strong>Data Interval:</strong></td><td>5 minutes</td></tr>
                        <tr><td><strong>Firmware:</strong></td><td>v1.2.3</td></tr>
                    </table>
                </div>
            </div>
            <hr>
            <h6>Recent Data</h6>
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                No recent data available. Controller details would show the latest sensor readings here.
            </div>
        `;
    }, 1000);
}

function unbindController(controllerId, serialNumber) {
    if (confirm(`Are you sure you want to force unbind controller "${serialNumber}"? The user will lose access to this controller.`)) {
        fetch(`/admin/controllers/${controllerId}/unbind`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Controller has been unbound successfully');
                location.reload();
            } else {
                alert('Failed to unbind controller: ' + (data.error || 'Unknown error'));
            }
        })
        .catch(error => {
            alert('Error: ' + error.message);
        });
    }
}

function deleteController(controllerId, serialNumber) {
    if (confirm(`Are you sure you want to delete controller "${serialNumber}"? This action cannot be undone and will remove all associated data.`)) {
        fetch(`/admin/controllers/${controllerId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                alert('Controller has been deleted successfully');
                location.reload();
            } else {
                alert('Failed to delete controller: ' + (data.error || 'Unknown error'));
            }
        })
        .catch(error => {
            alert('Error: ' + error.message);
        });
    }
}
</script>

<%- include('../partials/footer') %>