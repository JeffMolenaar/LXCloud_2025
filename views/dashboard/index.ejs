<%- include('../partials/header', { user: user, title: title }) %>

<div class="container-fluid">
    <div class="row">
        <%- include('../partials/sidebar', { user: user }) %>
        
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">
                    <i class="fas fa-tachometer-alt me-2"></i>
                    Dashboard
                </h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <a href="/dashboard/map" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-map-marked-alt me-1"></i>
                            Map View
                        </a>
                        <a href="/dashboard/analytics" class="btn btn-sm btn-outline-info">
                            <i class="fas fa-chart-line me-1"></i>
                            Analytics
                        </a>
                    </div>
                </div>
            </div>

            <% if (messages.twofa) { %>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    <%= messages.twofa %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <!-- Quick Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card dashboard-card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">My Controllers</h6>
                                    <h3 class="mb-0"><%= controllers.length %></h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-microchip fa-2x opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card dashboard-card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Online</h6>
                                    <h3 class="mb-0"><%= controllers.filter(c => c.isOnline).length %></h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-wifi fa-2x opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-3">
                    <div class="card dashboard-card bg-warning text-dark">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Offline</h6>
                                    <h3 class="mb-0"><%= controllers.filter(c => !c.isOnline).length %></h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-exclamation-triangle fa-2x opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <% if (user.role === 'admin' && stats) { %>
                <div class="col-md-3">
                    <div class="card dashboard-card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex justify-content-between">
                                <div>
                                    <h6 class="card-title">Total System</h6>
                                    <h3 class="mb-0"><%= stats.total %></h3>
                                </div>
                                <div class="align-self-center">
                                    <i class="fas fa-server fa-2x opacity-75"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Controllers Overview -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="card dashboard-card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="fas fa-list me-2"></i>
                                My Controllers
                            </h5>
                            <a href="/controllers" class="btn btn-sm btn-primary">
                                <i class="fas fa-cog me-1"></i>
                                Manage
                            </a>
                        </div>
                        <div class="card-body">
                            <% if (controllers.length === 0) { %>
                                <div class="text-center py-4">
                                    <i class="fas fa-microchip fa-3x text-muted mb-3"></i>
                                    <h6 class="text-muted">No controllers bound</h6>
                                    <p class="text-muted">
                                        <a href="/controllers/bind" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-plus me-1"></i>
                                            Bind Controller
                                        </a>
                                    </p>
                                </div>
                            <% } else { %>
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Type</th>
                                                <th>Status</th>
                                                <th>Last Seen</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% controllers.forEach(controller => { %>
                                                <tr>
                                                    <td>
                                                        <strong><%= controller.name || controller.serialNumber %></strong>
                                                        <% if (controller.name) { %>
                                                            <br><small class="text-muted"><%= controller.serialNumber %></small>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-secondary">
                                                            <%= controller.type.charAt(0).toUpperCase() + controller.type.slice(1) %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <span class="status-indicator <%= controller.isOnline ? 'online' : 'offline' %>"></span>
                                                        <span class="<%= controller.isOnline ? 'status-online' : 'status-offline' %>">
                                                            <%= controller.isOnline ? 'Online' : 'Offline' %>
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <% if (controller.lastSeen) { %>
                                                            <span class="last-seen" data-timestamp="<%= controller.lastSeen %>">
                                                                <%= new Date(controller.lastSeen).toLocaleString() %>
                                                            </span>
                                                        <% } else { %>
                                                            <span class="text-muted">Never</span>
                                                        <% } %>
                                                    </td>
                                                    <td>
                                                        <div class="btn-group btn-group-sm">
                                                            <a href="/dashboard/controller/<%= controller.id %>" class="btn btn-outline-primary">
                                                                <i class="fas fa-eye"></i>
                                                            </a>
                                                            <a href="/controllers/<%= controller.id %>/edit" class="btn btn-outline-secondary">
                                                                <i class="fas fa-edit"></i>
                                                            </a>
                                                        </div>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                        </tbody>
                                    </table>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card dashboard-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-map-marked-alt me-2"></i>
                                Quick Map
                            </h5>
                        </div>
                        <div class="card-body">
                            <div id="dashboard-map" class="map-container" style="height: 300px;">
                                <!-- Map will be loaded here -->
                            </div>
                            <div class="mt-3 text-center">
                                <a href="/dashboard/map" class="btn btn-primary btn-sm">
                                    <i class="fas fa-expand-arrows-alt me-1"></i>
                                    Full Map View
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="row">
                <div class="col-12">
                    <div class="card dashboard-card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-clock me-2"></i>
                                Recent Activity
                            </h5>
                        </div>
                        <div class="card-body">
                            <div id="recent-activity">
                                <div class="text-center py-3">
                                    <div class="spinner-border spinner-border-sm" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <span class="ms-2">Loading recent activity...</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Initialize dashboard functionality
    initializeDashboard();
    
    // Initialize mini map
    if (document.getElementById('dashboard-map')) {
        initializeMiniMap();
    }
    
    // Load recent activity
    loadRecentActivity();
    
    // Set up real-time updates
    setupRealTimeUpdates();
});

function initializeDashboard() {
    // Update timestamps periodically
    setInterval(updateTimestamps, 60000); // Update every minute
}

function initializeMiniMap() {
    const controllers = <%- JSON.stringify(controllers.filter(c => c.latitude && c.longitude)) %>;
    
    if (controllers.length === 0) {
        document.getElementById('dashboard-map').innerHTML = 
            '<div class="d-flex align-items-center justify-content-center h-100 text-muted">' +
            '<div class="text-center">' +
            '<i class="fas fa-map-marker-alt fa-2x mb-2"></i><br>' +
            'No controllers with location data' +
            '</div></div>';
        return;
    }
    
    // Initialize Leaflet map (you'll need to include Leaflet.js)
    const map = L.map('dashboard-map').setView([51.505, -0.09], 2);
    
    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
        attribution: 'Â© OpenStreetMap contributors'
    }).addTo(map);
    
    // Add markers for controllers
    controllers.forEach(controller => {
        const marker = L.marker([controller.latitude, controller.longitude])
            .bindPopup(`
                <strong>${controller.name || controller.serialNumber}</strong><br>
                Type: ${controller.type}<br>
                Status: <span class="${controller.isOnline ? 'text-success' : 'text-danger'}">
                    ${controller.isOnline ? 'Online' : 'Offline'}
                </span>
            `)
            .addTo(map);
    });
    
    // Fit map to show all markers
    if (controllers.length > 0) {
        const group = new L.featureGroup(map._layers);
        if (Object.keys(group._layers).length > 0) {
            map.fitBounds(group.getBounds().pad(0.1));
        }
    }
}

function loadRecentActivity() {
    fetch('/api/recent-activity')
        .then(response => response.json())
        .then(data => {
            const container = document.getElementById('recent-activity');
            if (data.activities && data.activities.length > 0) {
                container.innerHTML = data.activities.map(activity => `
                    <div class="d-flex align-items-start mb-3">
                        <div class="flex-shrink-0">
                            <i class="fas ${getActivityIcon(activity.type)} text-primary"></i>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <div class="fw-bold">${activity.title}</div>
                            <div class="text-muted small">${activity.description}</div>
                            <div class="text-muted small">${formatTimestamp(activity.timestamp)}</div>
                        </div>
                    </div>
                `).join('');
            } else {
                container.innerHTML = '<div class="text-center text-muted py-3">No recent activity</div>';
            }
        })
        .catch(error => {
            console.error('Failed to load recent activity:', error);
            document.getElementById('recent-activity').innerHTML = 
                '<div class="text-center text-danger py-3">Failed to load recent activity</div>';
        });
}

function getActivityIcon(type) {
    const icons = {
        'controller_connected': 'fa-plug',
        'controller_disconnected': 'fa-unlink',
        'data_received': 'fa-download',
        'controller_bound': 'fa-link',
        'controller_unbound': 'fa-unlink',
        'user_login': 'fa-sign-in-alt'
    };
    return icons[type] || 'fa-info-circle';
}

function updateTimestamps() {
    document.querySelectorAll('.last-seen').forEach(element => {
        const timestamp = element.getAttribute('data-timestamp');
        if (timestamp) {
            element.textContent = formatTimestamp(timestamp);
        }
    });
}

function formatTimestamp(timestamp) {
    const date = new Date(timestamp);
    const now = new Date();
    const diff = now - date;
    
    if (diff < 60000) { // Less than 1 minute
        return 'Just now';
    } else if (diff < 3600000) { // Less than 1 hour
        return Math.floor(diff / 60000) + ' minutes ago';
    } else if (diff < 86400000) { // Less than 1 day
        return Math.floor(diff / 3600000) + ' hours ago';
    } else {
        return date.toLocaleDateString();
    }
}

function setupRealTimeUpdates() {
    if (typeof io !== 'undefined') {
        const socket = io();
        
        // Join user room for targeted updates
        socket.emit('join-user-room', <%= user.id %>);
        
        // Listen for controller updates
        socket.on('controller-updated', function(controller) {
            updateControllerStatus(controller);
        });
        
        // Listen for new data
        socket.on('controller-data', function(data) {
            // Update recent activity or refresh relevant sections
            loadRecentActivity();
        });
    }
}

function updateControllerStatus(controller) {
    // Find and update controller status in the table
    const rows = document.querySelectorAll('tbody tr');
    rows.forEach(row => {
        const nameCell = row.querySelector('td:first-child strong');
        if (nameCell && (nameCell.textContent === controller.name || nameCell.textContent === controller.serialNumber)) {
            const statusCell = row.querySelector('td:nth-child(3)');
            const lastSeenCell = row.querySelector('td:nth-child(4)');
            
            if (statusCell) {
                const indicator = statusCell.querySelector('.status-indicator');
                const text = statusCell.querySelector('span:last-child');
                
                if (controller.isOnline) {
                    indicator.className = 'status-indicator online';
                    text.className = 'status-online';
                    text.textContent = 'Online';
                } else {
                    indicator.className = 'status-indicator offline';
                    text.className = 'status-offline';
                    text.textContent = 'Offline';
                }
            }
            
            if (lastSeenCell && controller.lastSeen) {
                const lastSeenSpan = lastSeenCell.querySelector('.last-seen');
                if (lastSeenSpan) {
                    lastSeenSpan.setAttribute('data-timestamp', controller.lastSeen);
                    lastSeenSpan.textContent = formatTimestamp(controller.lastSeen);
                }
            }
        }
    });
}
</script>

<%- include('../partials/footer') %>