<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .navbar {
            background: linear-gradient(135deg, #007bff, #0056b3);
            padding: 1rem 0;
        }
        
        .navbar-brand {
            font-weight: 600;
            font-size: 1.5rem;
        }
        
        .main-content {
            padding: 2rem 0;
        }
        
        .dashboard-card {
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
            transition: transform 0.3s ease;
        }
        
        .dashboard-card:hover {
            transform: translateY(-2px);
        }
        
        .stat-card {
            text-align: center;
            padding: 1.5rem;
        }
        
        .stat-number {
            font-size: 2.5rem;
            font-weight: 700;
            color: #007bff;
        }
        
        .stat-label {
            color: #6c757d;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }
        
        .welcome-section {
            background: linear-gradient(135deg, #007bff, #0056b3);
            color: white;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
        }
        
        .feature-card {
            background: white;
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            border-left: 4px solid #007bff;
        }
        
        .status-online {
            color: #28a745;
        }
        
        .status-offline {
            color: #dc3545;
        }
        
        .btn-logout {
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: white;
        }
        
        .btn-logout:hover {
            background: rgba(255, 255, 255, 0.3);
            color: white;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-dark">
        <div class="container">
            <span class="navbar-brand">
                <i class="fas fa-cloud me-2"></i>
                LXCloud Dashboard
            </span>
            <div class="navbar-nav flex-row">
                <span class="navbar-text me-3">
                    <i class="fas fa-user me-1"></i>
                    Welcome, <%= user.name %>
                </span>
                <form method="POST" action="/logout" class="d-inline">
                    <button type="submit" class="btn btn-logout btn-sm">
                        <i class="fas fa-sign-out-alt me-1"></i>
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container main-content">
        <!-- Welcome Section -->
        <div class="welcome-section">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="mb-3">
                        <i class="fas fa-tachometer-alt me-2"></i>
                        Dashboard
                    </h1>
                    <p class="mb-0">
                        Welcome to your LXCloud Simple dashboard. This simplified version provides core functionality 
                        without complex database dependencies.
                    </p>
                </div>
                <div class="col-md-4 text-center">
                    <i class="fas fa-check-circle" style="font-size: 4rem; opacity: 0.8;"></i>
                </div>
            </div>
        </div>

        <!-- Stats Cards -->
        <div class="row">
            <div class="col-md-3">
                <div class="dashboard-card stat-card">
                    <div class="stat-number"><%= stats.totalControllers %></div>
                    <div class="stat-label">Total Controllers</div>
                    <i class="fas fa-microchip text-primary mt-2" style="font-size: 1.5rem;"></i>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card stat-card">
                    <div class="stat-number status-online"><%= stats.onlineControllers %></div>
                    <div class="stat-label">Online Controllers</div>
                    <i class="fas fa-wifi text-success mt-2" style="font-size: 1.5rem;"></i>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card stat-card">
                    <div class="stat-number"><%= stats.totalUsers %></div>
                    <div class="stat-label">Total Users</div>
                    <i class="fas fa-users text-info mt-2" style="font-size: 1.5rem;"></i>
                </div>
            </div>
            <div class="col-md-3">
                <div class="dashboard-card stat-card">
                    <div class="stat-number status-online">
                        <i class="fas fa-circle"></i>
                    </div>
                    <div class="stat-label">System Status</div>
                    <span class="badge bg-success mt-2">Running</span>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="row">
            <div class="col-md-8">
                <div class="dashboard-card">
                    <h4 class="mb-4">
                        <i class="fas fa-cogs me-2"></i>
                        System Features
                    </h4>
                    
                    <div class="feature-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">File-based Authentication</h6>
                                <small class="text-muted">No database required, uses JSON file storage</small>
                            </div>
                            <span class="badge bg-success">Active</span>
                        </div>
                    </div>
                    
                    <div class="feature-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Local Network Only</h6>
                                <small class="text-muted">Restricted to local network access for security</small>
                            </div>
                            <span class="badge bg-success">Enforced</span>
                        </div>
                    </div>
                    
                    <div class="feature-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">HTTP Only</h6>
                                <small class="text-muted">No HTTPS redirects or enforcement</small>
                            </div>
                            <span class="badge bg-success">Disabled</span>
                        </div>
                    </div>
                    
                    <div class="feature-card">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="mb-1">Session Management</h6>
                                <small class="text-muted">Simple in-memory session storage</small>
                            </div>
                            <span class="badge bg-success">Working</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <div class="dashboard-card">
                    <h5 class="mb-3">
                        <i class="fas fa-info-circle me-2"></i>
                        System Information
                    </h5>
                    
                    <div class="mb-3">
                        <strong>Version:</strong> 2.0.0-simple<br>
                        <strong>Mode:</strong> Simplified<br>
                        <strong>Storage:</strong> File-based<br>
                        <strong>Network:</strong> Local only<br>
                        <strong>Protocol:</strong> HTTP only
                    </div>
                    
                    <div class="mb-3">
                        <h6>Quick Actions</h6>
                        <% if (user.role === 'admin') { %>
                            <a href="/users" class="btn btn-primary btn-sm mb-2 w-100">
                                <i class="fas fa-users me-1"></i>
                                Manage Users
                            </a>
                        <% } %>
                        <button class="btn btn-outline-primary btn-sm w-100" onclick="checkHealth()">
                            <i class="fas fa-heartbeat me-1"></i>
                            Check Health
                        </button>
                    </div>
                </div>
                
                <div class="dashboard-card">
                    <h6 class="mb-3">
                        <i class="fas fa-network-wired me-2"></i>
                        Network Status
                    </h6>
                    <div id="network-info">
                        <div class="d-flex justify-content-between">
                            <span>Connection:</span>
                            <span class="status-online">
                                <i class="fas fa-check-circle"></i> Connected
                            </span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Protocol:</span>
                            <span>HTTP</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span>Access:</span>
                            <span>Local Network</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script>
        function checkHealth() {
            fetch('/api/health')
                .then(response => response.json())
                .then(data => {
                    alert(`Server Health: ${data.status}\nVersion: ${data.version}\nTimestamp: ${data.timestamp}`);
                })
                .catch(error => {
                    alert('Health check failed: ' + error.message);
                });
        }
        
        // Auto-refresh stats (simple implementation)
        setInterval(() => {
            fetch('/api/health')
                .then(response => response.json())
                .then(data => {
                    console.log('Health check:', data);
                })
                .catch(error => {
                    console.warn('Health check failed:', error);
                });
        }, 30000); // Every 30 seconds
    </script>
</body>
</html>